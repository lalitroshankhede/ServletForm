<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServletPersonForm</display-name>
  
  
<welcome-file-list>
<welcome-file>home.jsp</welcome-file>
</welcome-file-list>


   <!-- servlet declaration -->
  
  <servlet>
  
  <servlet-name>userRegistration</servlet-name>
  <servlet-class>com.person_register.RegisterServlet</servlet-class>
  
  </servlet>
  
    <servlet>
  
  <servlet-name>serveltSuccess</servlet-name>
  <servlet-class>com.person_register.SuccessServlet</servlet-class>
  
  </servlet>


 <!--   servlet mapping -->
 
 
 <servlet-mapping>
 
 
 <servlet-name>userRegistration</servlet-name>
 <url-pattern>/userdata</url-pattern>
 
 </servlet-mapping>
 
 
 <servlet-mapping>
 
 
 <servlet-name>serveltSuccess</servlet-name>
 <url-pattern>/success</url-pattern>
 
 </servlet-mapping>
 
 

</web-app>